#include <iostream>//стандартная библиотека основных операций
#include <iomanip>
#include <string>
using namespace std;//облегчает ввод данных


int main() //создаем функцию
{
    int height, i, j;//переменные для длины, ширины, счетчики
    cout << "enter height: ";//введите ширину
    cin >> height;

    //создаем циклы

    for (int i = 0; i < height; ++i)
        cout
        << setw(height + i) // размер поля для выравнивания по правому краю
        << string(i * 2 + 1, '*') // печатаем соотв. число символов
        << endl;

    system("pause");//системный вызов команды pause 
}
